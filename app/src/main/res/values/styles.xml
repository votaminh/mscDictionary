<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="item_menu_drawer">
        <item name="fontFamily">@font/opensans_egular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_text_menu_item</item>
        <item name="android:drawablePadding">@dimen/margin_medium</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="textinput_login">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/bg_textinput</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:fontFamily">@font/opensans_egular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="anotherProgess" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#00295C</item>
    </style>

    <style name="text_choice">
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">@dimen/size_text_title</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
